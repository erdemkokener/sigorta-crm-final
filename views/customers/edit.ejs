<div class="row justify-content-center">
  <div class="col-md-8">
    <div class="card shadow-sm">
      <div class="card-header bg-light">
        <h5 class="mb-0">Müşteri Düzenle: <%= customer.name %></h5>
      </div>
      <div class="card-body">
        <form action="/customers/<%= customer.id %>" method="post" class="row g-3">
          <div class="col-md-6">
            <label class="form-label">Ad Soyad <span class="text-danger">*</span></label>
            <input type="text" class="form-control" name="name" value="<%= customer.name %>" <%= user && !user.isAdmin ? 'readonly' : '' %> required>
          </div>
          <div class="col-md-6">
            <label class="form-label">Telefon</label>
            <input type="tel" class="form-control" name="phone" value="<%= customer.phone || '' %>">
          </div>
          <div class="col-md-6">
            <label class="form-label">TCKN / Vergi No</label>
            <input type="text" class="form-control" name="id_no" value="<%= customer.id_no || '' %>" <%= user && !user.isAdmin ? 'readonly' : '' %>>
          </div>
          <div class="col-md-6">
            <label class="form-label">E-posta</label>
            <input type="email" class="form-control" name="email" value="<%= customer.email || '' %>" <%= user && !user.isAdmin ? 'readonly' : '' %>>
          </div>
          <div class="col-md-6">
            <label class="form-label">Doğum Tarihi</label>
            <input type="date" class="form-control" name="birth_date" value="<%= customer.birth_date || '' %>" <%= user && !user.isAdmin ? 'readonly' : '' %>>
          </div>
          <div class="col-md-6">
            <label class="form-label">Açılış Bakiyesi / Manuel Borç (TL)</label>
            <input type="number" step="0.01" class="form-control" name="manual_debt" value="<%= customer.manual_debt || 0 %>" <%= user && !user.isAdmin ? 'readonly' : '' %>>
            <div class="form-text">Poliçelerden bağımsız borç girmek için kullanın.</div>
          </div>
          
          <div class="col-12 mt-4 text-end">
            <button type="submit" class="btn btn-warning"><i class="bi bi-pencil-square"></i> Güncelle</button>
            <a href="/customers" class="btn btn-secondary"><i class="bi bi-x"></i> İptal</a>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
