<div class="row justify-content-center mt-5">
  <div class="col-md-5">
    <div class="card shadow-lg">
      <div class="card-header bg-warning text-dark text-center py-3">
        <h4 class="mb-0"><i class="bi bi-envelope-exclamation"></i> Şifremi Unuttum</h4>
      </div>
      <div class="card-body p-4">
        <% if (typeof msg !== 'undefined' && msg) { %>
          <div class="alert alert-success" role="alert">
            <i class="bi bi-check-circle-fill"></i> <%= msg %>
          </div>
        <% } %>
        <% if (typeof error !== 'undefined' && error) { %>
          <div class="alert alert-danger" role="alert">
            <i class="bi bi-exclamation-circle-fill"></i> <%= error %>
          </div>
        <% } %>
        <form action="/forgot-password" method="post" class="row g-3">
          <div class="col-12">
            <label class="form-label">Kullanıcı Adınız</label>
            <input type="text" class="form-control" name="username" required>
          </div>
          <div class="col-12">
            <label class="form-label">Ek Not (isteğe bağlı)</label>
            <textarea class="form-control" name="note" rows="3" placeholder="Örn: Şifremi unuttum, lütfen sıfırlayın."></textarea>
          </div>
          <div class="col-12 d-grid">
            <button type="submit" class="btn btn-warning">Talep Gönder</button>
          </div>
        </form>
      </div>
      <div class="card-footer text-center">
        <a href="/login" class="small text-muted">Giriş sayfasına dön</a>
      </div>
    </div>
  </div>
</div>

