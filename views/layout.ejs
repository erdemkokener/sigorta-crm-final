<!doctype html>
<html lang="tr">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title><%= title %> · Sigorta CRM</title>
  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
  <link rel="stylesheet" href="/style.css">
</head>
<body>
  <header class="navbar navbar-expand-lg navbar-dark bg-dark mb-4">
    <div class="container">
      <a class="navbar-brand" href="/policies">Sigorta CRM</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarContent">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarContent">
        <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
          <% if (user) { %>
            <li class="nav-item"><a class="nav-link" href="/customers">Müşteriler</a></li>
            <li class="nav-item"><a class="nav-link" href="/policies">Poliçeler</a></li>
            <li class="nav-item"><a class="nav-link" href="/settings">Ayarlar</a></li>
            <li class="nav-item ms-2"><a class="btn btn-success btn-sm mt-1" href="/policies/new">Yeni Poliçe</a></li>
            <li class="nav-item ms-2">
              <form action="/logout" method="post" class="d-inline">
                <button class="btn btn-outline-light btn-sm mt-1" type="submit">Çıkış</button>
              </form>
            </li>
          <% } else { %>
            <li class="nav-item"><a class="btn btn-primary" href="/login">Giriş</a></li>
          <% } %>
        </ul>
      </div>
    </div>
  </header>
  <main class="container">
    <%- body %>
  </main>
  <footer class="footer mt-auto py-3 bg-light text-center">
    <div class="container">
      <span class="text-muted">© <%= new Date().getFullYear() %> Sigorta CRM</span>
    </div>
  </footer>
  <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
